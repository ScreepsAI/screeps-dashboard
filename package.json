{
  "name": "screeps-dashboard",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "cross-env DISABLE_ESLINT=true roadhog dev",
    "build": "roadhog build",
    "start:server": "node server/app.js",
    "lint": "lint-staged",
    "lint:es": "eslint --fix --ext .js src"
  },
  "pre-commit": [
    "lint"
  ],
  "lint-staged": {
    "README.md": [
      "prettier --trailing-comma all --single-quote --write",
      "git add"
    ],
    "./package.json": [
      "prettier --trailing-comma all --single-quote --write",
      "git add"
    ],
    "server/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "prettier --trailing-comma all --single-quote --write",
      "git add"
    ],
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "browserslist": [
    "iOS >= 8",
    "Android >= 4"
  ],
  "dependencies": {
    "antd": "^3.1.0",
    "babel-runtime": "^6.9.2",
    "classnames": "^2.2.5",
    "dva": "^2.1.0",
    "dva-loading": "^1.0.4",
    "express": "^4.16.3",
    "fs-extra": "^5.0.0",
    "history": "^4.7.2",
    "lowdb": "^1.0.0",
    "path": "^0.12.7",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "request": "^2.85.0",
    "screeps-api": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.38",
    "@babel/preset-env": "^7.0.0-beta.38",
    "@babel/preset-stage-0": "^7.0.0-beta.38",
    "babel-eslint": "^8.1.2",
    "babel-plugin-dva-hmr": "^0.4.1",
    "babel-plugin-import": "^1.6.3",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-styled-components": "^1.2.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "cross-env": "^5.1.4",
    "cssnano": "^3.10.0",
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.37.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "expect": "^21.2.1",
    "fs-extra": "^5.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "lodash": "^4.17.10",
    "moment": "^2.22.1",
    "node-sass": "^4.5.3",
    "nprogress": "^0.2.0",
    "polished": "^1.7.0",
    "postcss-pxtorem": "^4.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.9.2",
    "react-lazyload": "^2.2.7",
    "react-typist": "^1.1.1",
    "redbox-react": "^1.3.2",
    "roadhog": "2.2.0",
    "sass-loader": "^6.0.6"
  }
}
